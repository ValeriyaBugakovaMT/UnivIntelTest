@if(Visible) 
{
<label for="@Component" style="@Style">@Text</label>
}
@functions {
    [Parameter]
    public string Component { get; set; }
    
    [Parameter]
    public string Text { get; set; } = "";

    [Parameter]
    public string Style { get; set; }

    [Parameter]
    public bool Visible { get; set; } = true;
}